= simple_form_for [@review.kid, @review] do |form|
  = form.input :held_at
  = form.input :attendee
  = form.input :reason, :collection => reason_collection
  = form.input :kind, :collection => kind_collection
  = form.input :content
  = form.input :outcome
  = form.input :note

  .col-sm-offset-3.col-sm-9
    = form.button :submit
